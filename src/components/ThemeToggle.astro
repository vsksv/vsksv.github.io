/* Estilo para el tema blanco */
.white-theme {
    --bg-color: white;
    --text-color: black;
    --primary-color: #ffffff;  /* blanco */
}

/* Estilo para el tema verde militar */
.military-green-theme {
    --bg-color: #4B5320;  /* verde militar */
    --text-color: white;
    --primary-color: #4B5320;  /* verde militar */
}

/* Aplicación de las variables para el fondo y texto */
body {
    background-color: var(--bg-color);
    color: var(--text-color);
}

/* Otras personalizaciones pueden ser añadidas aquí, usando las variables */


<button id="theme-toggle" class="w-8 h-8 -mr-2 flex items-center justify-center cursor-pointer" aria-label="Change color scheme">
    <svg class="w-4 h-4 fill-current" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
        <circle cx="8" cy="8" r="8"></circle>
    </svg>
</button>

<script>
    document.addEventListener('astro:page-load', () => {
        const theme = (() => {
            if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                return localStorage.getItem('theme') || 'white';
            }
            return 'white'; // Valor por defecto es blanco
        })();

        // Aplicar el tema almacenado
        if (theme === 'white') {
            document.documentElement.classList.remove('military-green-theme');
            document.documentElement.classList.add('white-theme');
        } else {
            document.documentElement.classList.remove('white-theme');
            document.documentElement.classList.add('military-green-theme');
        }

        window.localStorage.setItem('theme', theme);

        const handleToggleClick = () => {
            const element = document.documentElement;
            if (element.classList.contains('white-theme')) {
                element.classList.remove('white-theme');
                element.classList.add('military-green-theme');
                localStorage.setItem('theme', 'military-green');
            } else {
                element.classList.remove('military-green-theme');
                element.classList.add('white-theme');
                localStorage.setItem('theme', 'white');
            }
        };

        document.getElementById('theme-toggle')?.addEventListener('click', handleToggleClick);
    });
</script>

<script>
    document.addEventListener('astro:after-swap', () => {
        if (localStorage.theme === 'military-green') {
            document.documentElement.classList.add('military-green-theme');
        } else {
            document.documentElement.classList.add('white-theme');
        }
    });
</script>
